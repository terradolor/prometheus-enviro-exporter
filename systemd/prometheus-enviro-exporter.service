[Unit]
Description=Prometheus exporter for Pimoroni Enviro boards
Documentation=https://github.com/terradolor/prometheus-enviro-exporter
After=network.target

[Service]
User=enviro
Group=enviro
WorkingDirectory=/home/enviro/prometheus-enviro-exporter
ExecStart=python3 /home/enviro/prometheus-enviro-exporter/prometheus-enviro-exporter.py --bind=0.0.0.0 --port=8000
ExecReload=/bin/kill -HUP $MAINPID

[Install]
WantedBy=multi-user.target
